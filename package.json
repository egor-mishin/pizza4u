{
  "name": "pizza4u",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "type": "module",
  "scripts": {
    "pre-commit": "lint-staged",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
